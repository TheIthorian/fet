{
    "name": "journey-service",
    "version": "1.0.0",
    "main": "app.ts",
    "scripts": {
        "build": "tsc",
        "start": "ts-node src/app.ts | pino-pretty",
        "dev": "nodemon src/app.ts | pino-pretty",
        "test": "echo 'jest'",
        "test:cov": "jest --coverage",
        "test:e2e": "node src/test",
        "format": "prettier --write .",
        "lint": "eslint . --ext=.ts"
    },
    "author": "TheIthorian",
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.test\\.(t|j)s$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "devDependencies": {
        "@types/express": "^4.17.17",
        "nodemon": "^3.0.1",
        "ts-node": "^10.9.1"
    },
    "dependencies": {
        "@types/express-status-monitor": "^1.3.0",
        "body-parser": "^1.20.2",
        "concurrently": "^8.2.1",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-promise-router": "^4.1.1",
        "express-status-monitor": "^1.3.4",
        "fet-errors": "*",
        "fet-logger": "*",
        "tsconfig": "*",
        "zod": "^3.22.2"
    }
}